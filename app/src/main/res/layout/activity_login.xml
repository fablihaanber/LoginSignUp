<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:background="@drawable/loginsignup"
    android:paddingTop="66dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    tools:context=".LoginActivity">
    //#40013d
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="72dp"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Locatio!"

            android:fontFamily="@font/berlin_sans_fb_regular"
            android:textColor=" #fdddf9"
            android:textSize="40sp"
            android:textStyle="bold"
            ></TextView>


    </LinearLayout>

    <EditText
        android:id="@+id/userLoginID"
        android:layout_marginTop="8dp"
        android:textCursorDrawable="@drawable/color_cursor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#feeffc"
        android:backgroundTint="#feeffc"
        android:hint="Enter your email"
        android:textColorHint="#7b3c77"
        android:layout_marginBottom="8dp"
        android:text=""
        android:textSize="20sp"
        android:maxLength="30"

        android:inputType="textEmailAddress"
        android:fontFamily="@font/berlin_sans_fb_regular"


        ></EditText>
    <EditText
        android:id="@+id/userpasswordLoginID"
        android:inputType="textPassword"
        android:textCursorDrawable="@drawable/color_cursor"
        android:fontFamily="@font/berlin_sans_fb_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#feeffc"
        android:backgroundTint="#feeffc"
        android:hint="Password"
        android:textColorHint="#7b3c77"
        android:text=""
        android:textSize="20sp"
        android:maxLength="30"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="15dp"



        ></EditText>
    <Button
        android:id="@+id/loginID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="40dp"
        android:padding="12dp"
        android:text="Login"
        android:fontFamily="@font/berlin_sans_fb_regular"
        android:textSize="18sp"
        android:textColor="#feeffc"
        android:textAllCaps="false"
        android:backgroundTint="#7E0977"
        ></Button>
    <TextView
        android:id="@+id/signUpNeededID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="No account yet? Sign up"
        android:gravity="center"
        android:textSize="19dp"
        android:fontFamily="@font/berlin_sans_fb_regular"
        android:textColor="#813f7D"

        ></TextView>


</LinearLayout>